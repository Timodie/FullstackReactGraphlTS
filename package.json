{
  "name": "FullstackReactGraphlTS",
  "version": "1.0.0",
  "description": "Learn GraphQl",
  "main": "index.js",
  "repository": "https://github.com/Timodie/FullstackReactGraphlTS.git",
  "author": "timodie",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start-ts": "ts-node src/index.ts",
    "dev": "nodemon dist/index.js",
    "dev-ts": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "create:migration": "mikro-orm migration:create",
    "up:migration": "mikro-orm migration:up",
    "prettier:write": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run prettier:write && npm run lint"
    }
  },
  "dependencies": {
    "@mikro-orm/cli": "^4.3.2",
    "@mikro-orm/core": "^4.3.2",
    "@mikro-orm/migrations": "^4.3.2",
    "@mikro-orm/postgresql": "^4.3.2",
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^9.1.0",
    "type-graphql": "^1.1.1",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.10",
    "husky": "^4.3.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
